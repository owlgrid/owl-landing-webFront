{
    "compilerOptions": {
        "jsx": "preserve",
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./build",
        "lib": ["ES2015"],
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "noEmit": true,
        "incremental": true,
        "moduleResolution": "node",
        "isolatedModules": true
    },
    "include": ["pages", "components", "utils", "types"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
